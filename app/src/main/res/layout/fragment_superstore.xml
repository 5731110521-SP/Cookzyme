<FrameLayout    xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/superstore"
                android:background="@color/colorBG"
                tools:context="com.example.cookzyme.cookzyme.SuperstoreFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/Toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_weight="1"
                android:background="@color/colorToolbar"
                android:elevation="0dp"
                android:textAlignment="center"
                android:theme="@style/RefrigeratorToolbar"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title="Cart"
                app:titleTextColor="@android:color/white" />

        </android.support.design.widget.AppBarLayout>

        <ListView
            android:id="@+id/cartListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>


    <ImageButton
        android:id="@+id/cartFind"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/chef"
        android:clickable="true"
        android:scaleType="center" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:clickable="true"
        app:backgroundTint="@color/floatingButtonAdd"
        app:elevation="1dp"
        app:fabSize="auto"
        app:srcCompat="@drawable/ic_add_white_24dp"/>

</FrameLayout>
